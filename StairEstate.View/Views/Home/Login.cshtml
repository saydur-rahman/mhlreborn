
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>MHL ERP - Login</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/login.js"></script>
    <link href="~/Content/style1.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,700">
   
</head>
<body>

<!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
<div class="container">
    <div id="spinner" style="display:none;"><center><img src="~/images/spinner.gif" /></center></div>
    <div id="login">
        <form action="javascript:void(0);" method="get">
            <fieldset class="clearfix">
                <p><img src="~/File/logo.jpg" id="logo"></p>
                <p><span class="fontawesome-user"></span><input id="txtUsername" type="text" value="Username" onBlur="if (this.value == '') this.value = 'Username'" onFocus="if (this.value == 'Username') this.value = ''" required></p> <!-- JS because of IE support; better: placeholder="Username" -->
                <p><span class="fontawesome-lock"></span><input id="txtPassword" type="password" value="Password" onBlur="if (this.value == '') this.value = 'Password'" onFocus="if (this.value == 'Password') this.value = ''" required></p> <!-- JS because of IE support; better: placeholder="Password" -->
                <p><input type="button" id="btnSubmit" value="Sign In"></p>
            </fieldset>
        </form>
        <!-- <p>Not a member? <a href="#">Sign up now</a><span class="fontawesome-arrow-right"></span></p>-->
    </div> <!-- end login -->
</div>
</body>

</html>
<style>
    #logo {
        padding-bottom: 10px;
        width: 280px;
    }
</style>
